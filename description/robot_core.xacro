<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>
    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- Base Link -->
    
    <link name="base_link">
    
    </link>

    <!-- Chassis Link-->

    <joint name="chassis" type="fixed">
        <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.0 0.0 0.047" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.30 0.24 0.094"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.047" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.30 0.24 0.094"/>
            </geometry>
            <material name="white"/>
        </collision>
    </link>

    <!-- Front Left Wheel -->

    <joint name="wheel_FL" type="continuous">
        <origin xyz="0.125 0.15 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_FL"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="wheel_FL">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </collision>
    </link>

    <!-- Front Right Wheel -->

    <joint name="wheel_FR" type="continuous">
        <origin xyz="0.125 -0.15 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_FR"/>
        <axis xyz="0.0 0.0 -1"/>
    </joint>

    <link name="wheel_FR">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </collision>
    </link>

    <!-- Back Left Wheel -->

    <joint name="wheel_BL" type="continuous">
        <origin xyz="-0.125 0.15 0.0" rpy="-${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_BL"/>
        <axis xyz="0.0 0.0 1"/>
    </joint>

    <link name="wheel_BL">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </collision>
    </link>

    <!-- Back Right Wheel -->

    <joint name="wheel_BR" type="continuous">
        <origin xyz="-0.125 -0.15 0.0" rpy="${pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_BR"/>
        <axis xyz="0.0 0.0 -1"/>
    </joint>

    <link name="wheel_BR">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.05"/>
            </geometry>
            <material name="blue"/>
        </collision>
    </link>

</robot>